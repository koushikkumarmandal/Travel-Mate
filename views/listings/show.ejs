<% layout("/layouts/boilerplate") %>

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 show-card">

            <h3 class="text-center mb-4"><%= listings.title %></h3>

      
            
            <div class="card mb-4 shadow-sm">
                <img src="<%= listings.image.url %>" 
                     class="card-img-top img-fluid rounded" 
                     alt="listing_img" 
                     style="max-height:400px; object-fit:cover;">

                <div class="card-body">
                    <p class="card-text">
                        <b><i>~ <%= listings.owner.username %></i></b><br>
                        <%= listings.description %> <br>
                        <span class="fw-bold text-success">â‚¹ <%= listings.price %> / Night</span> <br>
                        <%= listings.location %>, <%= listings.country %> <br>
                    </p>
                </div>
            </div>

          


            <% if(currUser && listings.owner._id.equals(currUser._id)){ %>
                <div class="d-flex flex-column flex-md-row justify-content-between mb-4 gap-2">
                    <a href="/listings/<%= listings._id %>/edit" class="btn btn-dark flex-fill">Edit</a>
                    <form action="/listings/<%= listings._id %>?_method=DELETE" method="post" class="flex-fill">
                        <button class="btn btn-danger w-100">Delete</button>
                    </form>
                </div>
            <% } %>

          
            <% if(currUser){ %>
            <div class="card mb-4 p-3 shadow-sm">
                <h4>Leave a Review</h4>
                <form action="/listings/<%= listings._id %>/reviews" method="POST" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="rating" class="form-label">Rating</label>
                        <fieldset class="starability-slot">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>

                    <div class="mb-3">
                        <label for="comment" class="form-label">Comment</label>
                        <input type="text" id="comment" name="review[comment]" class="form-control" required>
                        <div class="invalid-feedback">Enter a valid comment</div>
                    </div>

                    <button class="btn btn-dark">Submit</button>
                </form>
            </div>
            <% } %>

            
            <% if(listings.reviews.length>0){ %>
            <h4 class="mb-3">All Reviews</h4>
            <div class="row g-3">
                <% for(review of listings.reviews){ %>
                    <div class="col-12 col-md-6 col-lg-4 d-flex">
                        <div class="card p-2 shadow-sm flex-fill d-flex flex-column">
                            <div class="card-body flex-grow-1">
                                <h6 class="card-title">~ <%= review.author.username %></h6>
                                <p class="starability-result" data-rating="<%= review.rating %>"></p>
                                <p class="card-text"><%= review.comment %></p>
                            </div>
                            <% if(currUser && review.author._id.equals(currUser._id)){ %>
                            <form action="/listings/<%= listings._id %>/reviews/<%= review._id %>?_method=DELETE" method="post" class="mt-auto">
                                <button class="btn btn-sm btn-danger w-100">Delete</button>
                            </form>
                            <% } %>
                        </div>
                    </div>
                <% } %>
            </div>
            <% } %>

        </div>
    </div>
</div>
