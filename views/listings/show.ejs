<% layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-8 offset-3 show-card">

<body>
    <h3><%= listings.title %></h3>

    <div class="card col-6 offset-1">
        <img src="<%= listings.image.url %>" class="card-img-top show-img" alt="listing_img">

        <div class="card-body">
            <p class="card-text">
                <b><i>~ <%= listings.owner.username %></i></b><br>
                <%= listings.description %> <br>
                â‚¹ <%= listings.price %> / Night <br>
                <%= listings.location %> <br>
                <%= listings.country %> <br>
            </p>
        </div>
    </div>

    <% if(currUser && listings.owner._id.equals(currUser._id)){ %>

        <div class="btns">
            <a href="/listings/<%= listings._id %>/edit" class="btn btn-dark col-2 offset-2 edit-btn">Edit</a>

            <form action="/listings/<%= listings._id %>?_method=DELETE" method="post">
                <button class="btn btn-dark offset-4">Delete</button>
            </form>
        </div>

    <% } %>

    <% if(currUser){ %>

    <div class="col-6 offset-1">
        <h4>Leave a Review</h4>

        <form action="/listings/<%= listings._id %>/reviews" method="POST" class="needs-validation" novalidate>
            <!--  <div>
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-control">
            </div>  -->
 <div> 
    <label for="rating" class="form-label">Rating</label>         
<fieldset class="starability-slot">
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
</div>

            <div>
                <label for="comment" class="form-label">Comment</label>
                <input type="text" id="comment" name="review[comment]" class="form-control" required>
                <div class="invalid-feedback">Enter Valid Comment</div>
            </div>

            <br>
            <button class="btn btn-dark add-btn">Submit</button>
        </form>
    </div>

    <% } %>

    <br>

   
    <% if(listings.reviews.length>0){ %>
    <div class="row">
         <h4>All Reviews </h4>
        <% for(review of listings.reviews){ %>
            <div class="card review-card col-4 mb-2">
                <div class="card-body">
                    <h6 class="card-title">~ <%= review.author.username %></h6>
                    <p class="starability-result" data-rating="<%= review.rating %>"></p>
                    <p class="card-text"><%= review.comment %></p>
                    
                </div>

                <form action="/listings/<%= listings._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                    <button class="btn btn-sm btn-dark offset-4 mb-2">Delete</button>
                    <br>
                </form>
            </div>
        <% } %>
    </div>
    <% } %>

</body>
</div>
</div>
