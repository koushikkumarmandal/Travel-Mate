<% layout("/layouts/boilerplate") %>

<div class="container my-4">
  <h2 class="fw-bold text-center mb-4">Admin Create Booking</h2>

  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-12">

      <form action="/admin/bookings" method="POST" class="card p-4 shadow-sm rounded-4">

        
        <div class="mb-3">
          <label class="form-label fw-bold">Select User</label>
          <select name="userId" class="form-select" required>
            <% for(let u of users){ %>
              <option value="<%= u._id %>"><%= u.username %> - <%= u.email %></option>
            <% } %>
          </select>
        </div>

       
        <div class="mb-3">
          <label class="form-label fw-bold">Select Hotel</label>
          <select name="listingId" class="form-select" required>
            <% for(let l of listings){ %>
              <option value="<%= l._id %>"><%= l.title %> (₹<%= l.price %>/day)</option>
            <% } %>
          </select>
        </div>

        
        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label fw-bold">Check In</label>
            <input type="date" name="checkIn" class="form-control" required>
          </div>

          <div class="col-md-6">
            <label class="form-label fw-bold">Check Out</label>
            <input type="date" name="checkOut" class="form-control" required>
          </div>
        </div>

        
        <div class="row g-3 mt-2">
          <div class="col-md-6">
            <label class="form-label fw-bold">Adults</label>
            <input type="number" name="adults" class="form-control" min="1" value="1" required>
          </div>

          <div class="col-md-6">
            <label class="form-label fw-bold">Children</label>
            <input type="number" name="children" class="form-control" min="0" value="0">
          </div>
        </div>

        <button class="btn btn-success w-100 mt-3 py-2 fw-bold">
          Create Booking
        </button>

      </form>

    </div>
  </div>

  <div class="mt-3 text-center">
    <a href="/admin/bookings" class="btn btn-secondary">⬅ Back</a>
  </div>
</div>
